<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/prob_spray_tr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/list_selector_background"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:paddingRight="5dp" >

            <TextView
                android:id="@+id/variety_sow_txt"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Problem"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/variety_sow_img_btn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/ic_problemtype" />

            <TextView
                android:id="@+id/dlg_lbl_prob_spray"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/empty"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="Problem"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pest_spray_tr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/list_selector_background"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:paddingRight="5dp" >

            <TextView
                android:id="@+id/variety_sow_txt"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Pesticide name"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/variety_sow_img_btn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/pest_type" />

            <TextView
                android:id="@+id/dlg_lbl_pest_spray"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/empty"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="Pesticide"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/units_spray_tr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/list_selector_background"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:paddingRight="5dp" >

            <TextView
                android:id="@+id/amount_sow_txt"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Amount"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/amount_sow_img_btn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/unitsicon" />

            <TextView
                android:id="@+id/dlg_lbl_unit_no_spray"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/empty"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="No"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/dlg_lbl_units_spray"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/empty"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="Unit"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/day_spray_tr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/list_selector_background"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:paddingRight="5dp" >

            <TextView
                android:id="@+id/date_sow_txt"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Date"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/date_sow_img_btn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/date" />

            <TextView
                android:id="@+id/dlg_lbl_day_spray"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/empty"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="Day"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/dlg_lbl_month_spray"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/empty"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="Month"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_bottom_bar" />

</RelativeLayout>