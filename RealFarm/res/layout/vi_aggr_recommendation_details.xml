<?xml version="1.0" encoding="utf-8"?>

  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/linearLayout1"
      android:layout_width="match_parent"
      android:layout_height="match_parent" >

     <TextView
         android:id="@+id/dlg_lbl_details"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:text="Dialog dummy details"
         android:gravity="center_horizontal"
         android:paddingTop="5dip"
         android:paddingBottom="5dip"
         android:textAppearance="?android:attr/textAppearanceMedium" />
      
      <ImageView
          android:id="@+id/dlg_img_seed"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/dlg_lbl_details"
          android:src="@drawable/pic_90px_bajra_tiled" 
          android:layout_marginTop="10dip"
          android:layout_marginBottom="10dip"
          android:scaleType="fitXY" />
      
      <ImageButton android:id="@+id/dlg_btn_audio_play"
          		android:src="@drawable/ic_76px_sound"
          		android:layout_alignParentRight="true"
  	            android:layout_below="@+id/dlg_lbl_details"
          		android:layout_margin="10dip"
          		android:layout_width="80px"
          		android:layout_height="80px"
          		android:background="@drawable/circular_btn" />

      <com.commonsensenet.realfarm.utils.FlowLayout
                android:id="@+id/dlg_linlay_userDataDetails" 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:padding="10dp"
			    android:horizontalSpacing="10dp"
			    android:verticalSpacing="20dp">
			    
			    <FrameLayout android:layout_width="60px" android:layout_height="40px" android:background="#F00"/>
			    <FrameLayout android:layout_width="120px" android:layout_height="40px" android:background="#F00"/>
			    <FrameLayout android:layout_width="140px" android:layout_height="20px" android:background="#F00"/>
				<FrameLayout android:layout_width="40px" android:layout_height="60px" android:background="#F00"/>
			    <FrameLayout android:layout_width="20px" android:layout_height="40px" android:background="#F00"/>
			    <FrameLayout android:layout_width="80px" android:layout_height="40px" android:background="#F00"/>
			    <FrameLayout android:layout_width="80px" android:layout_height="40px" android:background="#F00"/>
			    <FrameLayout android:layout_width="100px" android:layout_height="40px" android:background="#F00"/>
 	   </com.commonsensenet.realfarm.utils.FlowLayout>
      
<!--       <GridView android:id="@+id/dlg_linlay_userDataDetails"
          		android:numColumns="4"
          		android:horizontalSpacing="5dip" android:verticalSpacing="5dip"
          		android:layout_width="fill_parent"
          		android:layout_height="wrap_content"
          		/>  -->
            
      <ImageView
          android:id="@+id/dlg_img_action"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/dlg_lbl_details"
          android:background="@drawable/circular_icon_bg"
          android:layout_alignParentLeft="true"
          android:src="@drawable/ic_48px_news" 
          android:layout_margin="10dip" />
      
      
  </RelativeLayout>
