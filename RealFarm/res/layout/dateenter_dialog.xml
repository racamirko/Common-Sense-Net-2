<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <DatePicker
        android:id="@+id/harvest_datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:editable="false" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/harvest_datePicker"
        android:layout_marginTop="29dp" >

        <RelativeLayout
            android:id="@+id/RelativeLayoutwf_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/okbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:src="@drawable/ic_72px_ok" />

            <Button
                android:id="@+id/date_ok"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignBottom="@+id/okbutton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/okbutton"
                android:background="@drawable/square_btn_transp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayoutwf_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/cancelbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:src="@drawable/ic_72px_cancel" />

            <Button
                android:id="@+id/date_cancel"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignBottom="@+id/cancelbutton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/cancelbutton"
                android:background="@drawable/square_btn_transp" />
        </RelativeLayout>
    </TableRow>

</RelativeLayout>