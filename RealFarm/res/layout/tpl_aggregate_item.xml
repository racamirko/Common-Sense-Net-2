<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="@drawable/square_btn"  >

    <RelativeLayout
        android:id="@+id/relative_layout_left"
        android:layout_width="70dp"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_height="match_parent"
        android:background="#CFFFFF" >
        
        <TextView
            android:id="@+id/label_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/image_left"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_center"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/relative_layout_left"  >

        <TextView
            android:id="@+id/label_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/image_center"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_right"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:padding="5dp"
        android:layout_toRightOf="@+id/relative_layout_center"
        android:gravity="left|center" >

        <TextView
            android:id="@+id/label_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

    </RelativeLayout>

    <!--
         <ImageButton
        android:id="@+id/icon_aggregate_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circular_btn"
        android:src="@drawable/ic_48px_thumbs_up" />
    -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:padding="1dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/label_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#CCCCCC"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/image_left_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</RelativeLayout>