<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/video_player_layout_button_bar"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <VideoView
            android:id="@+id/video_player_videoview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true" >
        </VideoView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/video_player_layout_button_bar"
        style="@android:style/ButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/video_player_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_48px_back"
            android:text="@string/button_back_to_videos" />
    </LinearLayout>

</RelativeLayout>