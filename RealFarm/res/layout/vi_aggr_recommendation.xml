<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/img_plant"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:src="@drawable/pic_90px_bajra_tiled"
        android:scaleType="fitXY" />
    
    <ImageView
        android:id="@+id/img_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dip"
        android:src="@drawable/ic_90px_sowing"
        android:background="@drawable/circular_icon_bg"/>

    <TextView
        android:id="@+id/lbl_count_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:layout_toRightOf="@+id/img_action"
        android:layout_alignParentBottom="true"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/aggr_item_btn_like"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circular_btn"
        android:src="@drawable/ic_48px_thumbs_up"
        android:layout_margin="5dp" />

    <Button 
        android:id="@+id/btn_main_click"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/square_btn_transp"/>
    
</RelativeLayout>