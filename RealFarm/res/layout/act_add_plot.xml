<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/plot_tr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/list_selector_background"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:paddingRight="5dp" >

            <TextView
                android:id="@+id/variety_sow_txt"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Plot image"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/variety_sow_img_btn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/plotimage" />

            <ImageView
                android:id="@+id/dlg_plot_img_test"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/empty"
                android:gravity="center_vertical|left"
                android:scaleType="centerCrop"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/soiltype_tr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/list_selector_background"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:paddingRight="5dp" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Soil type"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/soiltypeicon" />

            <TextView
                android:id="@+id/dlg_lbl_soil_plot"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/empty"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="Soil type"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/maincrop_tr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/list_selector_background"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:paddingRight="5dp" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Main crop"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/ic_maincrop" />

            <TextView
                android:id="@+id/dlg_lbl_crop_plot"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/empty"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="Main crop"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/size_tr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/list_selector_background"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:paddingRight="5dp" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Size"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/plotsize" />

            <TextView
                android:id="@+id/size_txt"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/empty"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="Size"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="22sp" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/type_tr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/list_selector_background"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:paddingRight="5dp" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Type"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/plotsize" />

            <TextView
                android:id="@+id/type_txt"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/empty"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="Type"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_bottom_bar" />

</RelativeLayout>