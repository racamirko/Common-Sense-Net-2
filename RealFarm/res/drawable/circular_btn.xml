<selector xmlns:android="http://schemas.android.com/apk/res/android" android:dither="true">

    <item android:drawable="@drawable/circular_btn_normal" android:state_window_focused="false"/>
    <item android:drawable="@drawable/circular_btn_pressed" android:state_pressed="true"/>
    <item android:drawable="@drawable/circular_btn_pressed" android:state_focused="true"/>
    <item android:drawable="@drawable/circular_btn_disabled" android:state_enabled="false"/>
    <item android:drawable="@drawable/circular_btn_normal"/>

</selector>